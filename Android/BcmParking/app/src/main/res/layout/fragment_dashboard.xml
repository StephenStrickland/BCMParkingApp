<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ksubcm.parking.bcmparking.fragments.DashboardFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--dashboard stats-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center" android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distinct Violations This Week"
                    android:textSize="30sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35"
                    android:textSize="40sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Cars This Week"
                    android:textSize="30sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="110"
                    android:textSize="40sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat Offenders"
                android:textSize="34sp"
                android:paddingLeft="24dp"
                android:height="64dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp">
                <TableRow>
                    <TextView android:text="License Plate" android:textStyle="bold" android:gravity="center" android:layout_column="1" android:padding="3dip"/>
                    <TextView android:text="Number of Violations" android:textStyle="bold" android:gravity="center" android:layout_column="2" android:padding="3dip"/>
                    <TextView android:text="Number of Notifications" android:textStyle="bold" android:gravity="center" android:layout_column="3" android:padding="3dip"/>
                </TableRow>
               
                <TableRow>
                    <TextView android:text="PJH4LM" android:textStyle="bold" android:gravity="center" android:layout_column="1" android:padding="3dip"/>
                    <TextView android:text="4" android:textStyle="bold" android:gravity="center" android:layout_column="2" android:padding="3dip"/>
                    <TextView android:text="3" android:textStyle="bold" android:gravity="center" android:layout_column="3" android:padding="3dip"/>


                </TableRow>

            </TableLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>



</FrameLayout>
